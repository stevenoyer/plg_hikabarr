<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="4.0" method="upgrade" group="hikashop">
	<name>plg_hikabarr</name>
	<creationDate>28 mars 2023</creationDate>
	<version>0.1</version>
	<author>Steven Oyer (systrio)</author>
	<authorEmail>steven@systrio.fr</authorEmail>
	<authorUrl>http://www.systrio.fr</authorUrl>
	<copyright>(C) 2023 Systrio. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>PLG_HIKABARR_DESCRIPTION</description>
	<namespace path="src">Systrio\Plugins\Hikabarr</namespace>
	<files>
		<folder>language</folder>
		<folder>src</folder>
		<folder>vendor</folder>
		<filename>composer.json</filename>
		<filename>composer.lock</filename>
		<filename plugin="hikabarr">hikabarr.php</filename>
		<filename>hikabarr.xml</filename>
	</files>
	<languages>
		<language tag="fr-FR">language/fr-FR/plg_hikashop_hikabarr.ini</language>
		<language tag="fr-FR">language/fr-FR/plg_hikashop_hikabarr.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
            <fieldset name="basic">
                <field name="api_url" type="text" label="PLG_HIKABARR_PARAMS_FIELDS_LABEL_APIURL" description="PLG_HIKABARR_PARAMS_FIELDS_LABEL_APIURL_DESC" />
                <field name="api_key" type="text" label="PLG_HIKABARR_PARAMS_FIELDS_LABEL_APIKEY" description="PLG_HIKABARR_PARAMS_FIELDS_LABEL_APIKEY_DESC" />
            </fieldset>

			<fieldset name="order" label="PLG_HIKABARR_FIELDSET_ORDER_LABEL">
				<field
					name="send_order_status_created"
					type="radio"
					label="PLG_HIKABARR_ORDER_FIELDS_LABEL_SEND_ORDER_STATUS_CREATED"
					layout="joomla.form.field.radio.switcher"
					default="0"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				
				<field
					name="send_order_status_confirmed"
					type="radio"
					label="PLG_HIKABARR_ORDER_FIELDS_LABEL_SEND_ORDER_STATUS_CONFIRMED"
					layout="joomla.form.field.radio.switcher"
					default="0"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="send_order_status_cancelled"
					type="radio"
					label="PLG_HIKABARR_ORDER_FIELDS_LABEL_SEND_ORDER_STATUS_CANCELLED"
					layout="joomla.form.field.radio.switcher"
					default="0"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="send_order_status_shipped"
					type="radio"
					label="PLG_HIKABARR_ORDER_FIELDS_LABEL_SEND_ORDER_STATUS_SHIPPED"
					layout="joomla.form.field.radio.switcher"
					default="0"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="send_order_status_pending"
					type="radio"
					label="PLG_HIKABARR_ORDER_FIELDS_LABEL_SEND_ORDER_STATUS_PENDING"
					layout="joomla.form.field.radio.switcher"
					default="0"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
        </fields>
	</config>
</extension>